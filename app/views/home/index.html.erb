<div class="container-fluid">
	<div class="row-fluid">
    	<div class="span2 well">
			<ul class="nav nav-list">
  				<li class="nav-header">TOP TAGS</li>
          <% @tags.each do |t| %>
            <li><a href="../<%= t.name %>" title="Give me <%= t.name %> anygrams"><%= t.name %></a></li>
          <% end %>
			</ul>
    	</div>
    	<div class="span10">
    		<div class="page-header">
      			<h1>Welcome to anygram <i class="icon-random"></i></h1>
  			</div>
  			<p>
  				The fastest way to browse Instagram photos online!
  			</p>
  			<h3>How anygram<i class="icon-random"></i> works</h3>
  			<ol>
  					<li>append your search tag to the page address</li>
  					<li>load!</li>
  					<li>try it with <a href="../infinity">infinity</a></li>
  			</ol>
    	</div>
  	</div>
  </div>
<ul class="thumbnails">
<% @photos.data.each do |photo| %>
  <li>
    <div class="thumbnail">
             <% if (photo.caption.text != nil) 
          @text = photo.caption.text 
      else
        @text = "&nbsp;"
      end %>
      <a href="<%= photo.link %>" target="_blank" title="<%= @text %>"><img src="<%= photo.images.standard_resolution.url %>" width="612" height="612" alt=""></a>
      <p>&nbsp;</p>
      <p><%= @text[0..50] %></p>
      <p>
      	<img src="<%= photo.user.profile_picture %>" width="24" height="24" /> photo by <b property="dc:creator"><%= photo.user.full_name %></b>
      </p>
    </div>
  </li>
<% end %>
</ul>
